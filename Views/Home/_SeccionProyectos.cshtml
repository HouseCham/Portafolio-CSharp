@model IEnumerable<ProyectoDTO>

@if (Model is not null){
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis trabajos recientes</h1>
        <p>Aqui puedes ver mis trabajos mas recientes</p>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">

                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@proyecto.Title</h5>
                        <p class="card-text">@proyecto.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank">Visitar</a>
                    </div>
                </div>
            }
        </div>
    </div>
}